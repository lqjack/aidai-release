                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.apache.felix</groupId>
                                    <artifactId>org.apache.felix.scr</artifactId>
                                    <outputDirectory>target/classes/resources/repository/ext</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.equinox</groupId>
                                    <artifactId>org.eclipse.equinox.region</artifactId>
                                    <outputDirectory>target/classes/resources/repository/ext</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.gemini.blueprint</groupId>
                                    <artifactId>gemini-blueprint-core</artifactId>
                                    <outputDirectory>target/classes/resources/repository/ext</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.gemini.blueprint</groupId>
                                    <artifactId>gemini-blueprint-extender</artifactId>
                                    <outputDirectory>target/classes/resources/repository/ext</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.gemini.blueprint</groupId>
                                    <artifactId>gemini-blueprint-io</artifactId>
                                    <outputDirectory>target/classes/resources/repository/ext</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.gemini.management</groupId>
                                    <artifactId>org.eclipse.gemini.management</artifactId>
                                    <outputDirectory>target/classes/resources/repository/ext</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.osgi</groupId>
                                    <artifactId>org.osgi.enterprise</artifactId>
                                    <outputDirectory>target/classes/resources/repository/ext</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jolokia</groupId>
                                    <artifactId>jolokia-osgi</artifactId>
                                    <outputDirectory>target/classes/resources/repository/ext</outputDirectory>
                                </artifactItem>
